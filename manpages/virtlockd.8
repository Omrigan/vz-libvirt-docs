.INDENT 0.0
.INDENT 3.5
.sp
.nf
.ft C
# virtlockd \-d
# ls \-la /run/virtlockd.pid
\-rw\-r\-\-r\-\- 1 root root 6 Jul  9 02:40 /run/virtlockd.pid
.ft P
.fi
